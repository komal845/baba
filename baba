    <h2>Pay Toll Tax</h2>
    <form method="POST">
        <input type="text" name="name" placeholder="Your Name" required>
        <input type="text" name="vehicle_number" placeholder="Vehicle Number" required>
        <input type="text" name="vehicle_type" placeholder="Vehicle Type (Car/Truck/etc.)" required>
        <input type="text" name="toll_location" placeholder="Toll Location" required>
        <input type="number" step="0.01" name="amount" placeholder="Amount" required>
        <button type="submit">Pay Toll</button>
    </form>
