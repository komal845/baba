<html>
<head>
    <title>Admin Panel</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
<div class="container">
    <h2>All Orders</h2>
    <?php while ($row = $res->fetch_assoc()): ?>
        <div class="card">
            <p><strong>Order ID:</strong> <?= $row['id'] ?></p>
            <p><strong>Medicine:</strong> <?= $row['medname'] ?></p>
            <p><strong>Customer:</strong> <?= $row['customer_name'] ?></p>
            <p><strong>Qty:</strong> <?= $row['quantity'] ?></p>
            <p><strong>Total:</strong> ₹<?= $row['total_price'] ?></p>
            <p><strong>Status:</strong> <?= $row['status'] ?></p>
            <div class="status-buttons">
                <a href="update_order_status.php?id=<?= $row['id'] ?>&status=Pending"><button>Pending</button></a>
                <a href="update_order_status.php?id=<?= $row['id'] ?>&status=Packed"><button>Packed</button></a>
                <a href="update_order_status.php?id=<?= $row['id'] ?>&status=Dispatched"><button>Dispatched</button></a>
                <a href="update_order_status.php?id=<?= $row['id'] ?>&status=Delivered"><button>Delivered</button></a>
            </div>
        </div>
    <?php endwhile; ?>
</div>
</body>
</html>

buy_medicine.php
<?php include "db.php"; ?>
<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $med_id = $_POST['medicine_id'];
    $name = $_POST['customer_name'];
    $quantity = $_POST['quantity'];

    $med = $conn->query("SELECT * FROM medicines WHERE id = $med_id")->fetch_assoc();
    if ($med['stock'] >= $quantity) {
        $total = $med['price'] * $quantity;

        $conn->query("INSERT INTO orders (medicine_id, customer_name, quantity, total_price) 
                      VALUES ($med_id, '$name', $quantity, $total)");
        $conn->query("UPDATE medicines SET stock = stock - $quantity WHERE id = $med_id");

        $order_id = $conn->insert_id;
        echo "<script>alert('Order placed successfully. Your Order ID is: $order_id'); window.location='index.php';</script>";
    } else {
        echo "<script>alert('Insufficient stock!');</script>";
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <title>Buy Medicine</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
<div class="container">
    <h2>Buy Medicine</h2>
    <form method="POST">
        <input type="text" name="customer_name" placeholder="Your Name" required>
        <select name="medicine_id" required>
            <option value="">-- Select Medicine --</option>
            <?php
            $res = $conn->query("SELECT * FROM medicines WHERE stock > 0");
            while ($row = $res->fetch_assoc()):
                echo "<option value='{$row['id']}'>{$row['name']} (₹{$row['price']})</option>";
            endwhile;
            ?>
        </select>
        <input type="number" name="quantity" placeholder="Quantity" min="1" required>
        <button type="submit">Place Order</button>
    </form>
</div>
</body>
</html>

db.php
<?php
$host = "localhost";
$user = "root";
$pass = "";
$db = "probs";

$conn = new mysqli($host, $user, $pass, $db);
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}
?>

dbSetup
CREATE DATABASE pharmacy;

USE pharmacy;

CREATE TABLE medicines (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    price DECIMAL(10,2),
    stock INT
);

CREATE TABLE orders (
    id INT AUTO_INCREMENT PRIMARY KEY,
    medicine_id INT,
    customer_name VARCHAR(100),
    quantity INT,
    total_price DECIMAL(10,2),
    status ENUM('Pending', 'Packed', 'Dispatched', 'Delivered') DEFAULT 'Pending',
    FOREIGN KEY (medicine_id) REFERENCES medicines(id)
);

CREATE TABLE admin (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50),
    password VARCHAR(255)
);

INSERT INTO admin (username, password) VALUES ('admin', 'admin123');
INSERT INTO medicines (name, price, stock) VALUES 
('Paracetamol', 20, 100),
('Ibuprofen', 30, 80),
('Amoxicillin', 50, 50);

