dbSetup
CREATE DATABASE IF NOT EXISTS ubercart;
USE ubercart;

CREATE TABLE products (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100),
  price DECIMAL(10,2),
  image VARCHAR(255)
);

INSERT INTO products (name, price, image) VALUES
('Product A', 10.99, 'img1.jpg'),
('Product B', 15.49, 'img2.jpg'),
('Product C', 8.75, 'img3.jpg');

index.php
<?php
include 'db.php';
session_start();
$result = $conn->query("SELECT * FROM products");
?>

<!DOCTYPE html>
<html>
<head>
  <title>Ubercart - Home</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
<h1>Ubercart - Product Listing</h1>
<div class="products">
  <?php while ($row = $result->fetch_assoc()) { ?>
    <div class="product">
      <img src="img/<?= $row['image'] ?>" alt="<?= $row['name'] ?>">
      <h2><?= $row['name'] ?></h2>
      <p>Price: $<?= $row['price'] ?></p>
      <form method="post" action="addToCart.php">
        <input type="hidden" name="product_id" value="<?= $row['id'] ?>">
        <button type="submit">Add to Cart</button>
      </form>
    </div>
  <?php } ?>
</div>
<a href="cart.php">Go to Cart</a>
</body>
