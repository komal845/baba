send-code.php
<?php
session_start();
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $_SESSION['email'] = $_POST['email'];
    $_SESSION['code'] = rand(1000, 9999);  // Random 4-digit code
    // "Send" the code (simulated)
    header("Location: verify-code.html");  // Go to frontend input
    exit;
}
?>

