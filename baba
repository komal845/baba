        <center>
            <h2>Shape Area Calculator</h2>
            <table>
                <tr>
                    <td>Enter First Value (base/radius/side):</td>
                    <td><input type="text" name="a" required></td>
                </tr>
                <tr>
                    <td>Enter Second Value (height for triangle):</td>
                    <td><input type="text" name="b"></td>
                </tr>
                <tr>
                    <td><input type="radio" name="op" value="1" required> Triangle</td>
                    <td><input type="radio" name="op" value="2"> Square</td>
                </tr>
                <tr>
                    <td><input type="radio" name="op" value="3"> Circle</td>
                    <td><input type="submit" value="Calculate Area"></td>
                </tr>
            </table>
        </center>
    </form>
</body>
</html>
result.php
<?php
class Shape {
    public function area($a, $b = 0) {
        return 0;
    }
}

class Triangle extends Shape {
    // Match parent signature by adding "= 0" to $b
    public function area($a, $b = 0) {
        return 0.5 * $a * $b;
    }
}

class Square extends Shape {
    public function area($a, $b = 0) {
        return $a * $a;
    }
}

class Circle extends Shape {
    public function area($a, $b = 0) {
        return 3.14 * $a * $a;
    }
}

$a  = isset($_GET['a']) ? (float)$_GET['a'] : 0;
$b  = isset($_GET['b']) ? (float)$_GET['b'] : 0;
$op = $_GET['op'] ?? null;

switch ($op) {
    case '1':
        $shape = new Triangle();
        $name  = "Triangle";
        break;
    case '2':
        $shape = new Square();
        $name  = "Square";
        break;
    case '3':
        $shape = new Circle();
        $name  = "Circle";
        break;
    default:
        die("Invalid shape selected.");
}

$area = $shape->area($a, $b);
echo "<h2>Area of $name: $area</h2>";
echo "<p><a href='index.html'>Go Back</a></p>";
?>
