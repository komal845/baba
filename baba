admin.php
<?php session_start(); include "db.php";
if (!isset($_SESSION['admin'])) {
    header("Location: login.php");
    exit();
}
$res = $conn->query("SELECT o.*, m.name AS medname FROM orders o JOIN medicines m ON o.medicine_id = m.id ORDER BY o.id DESC");
?>
