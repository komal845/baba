script.js 
function calculate() {
    const name = document.getElementById("name").value.trim();
    const age = parseInt(document.getElementById("age").value.trim());
  
    if (!name || isNaN(age) || age <= 0) {
      alert("Please enter a valid name and age.");
      return;
    }
  
    // Greeting based on time
    const hour = new Date().getHours();
    let greeting = "";
  
    if (hour < 12) {
      greeting = "Good Morning 🌅";
    } else if (hour < 18) {
      greeting = "Good Afternoon ☀️";
    } else {
      greeting = "Good Evening 🌙";
    }
  
    // Calculate age in weeks
    const ageInWeeks = age * 52;
  
    // Display results
    document.getElementById("greeting").innerHTML = `<span class="highlight">${greeting}</span>`;
    document.getElementById("lifetime").innerHTML = `Hey, you are approximately <span class="highlight">${ageInWeeks}</span> weeks old.`;
    document.getElementById("nameInfo").innerHTML = `Thank you for using the app, <span class="highlight">${name}</span>!`;
  }

