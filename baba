cookie.php
<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST["username"];
    setcookie("user", $username, time() + (86400 * 7)); // 7 days
    header("Location: cookie.php");
    exit();
}
?>

