    <?php
    if (isset($_COOKIE["user"])) {
        echo "<p>Welcome back, <strong>" . htmlspecialchars($_COOKIE["user"]) . "</strong>!</p>";
    } else {
        echo "<p>No cookie found. Go to <a href='index.html'>Set Cookie</a>.</p>";
    }
    ?>
